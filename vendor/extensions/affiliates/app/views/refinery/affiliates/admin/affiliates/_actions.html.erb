<ul>
  <% if ::Refinery::Affiliates::Admin::AffiliatesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.affiliates_admin_affiliates_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_affiliates_admin_affiliate_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Affiliates::Admin::AffiliatesController.sortable? && ::Refinery::Affiliates::Affiliate.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Affiliates"),
                 refinery.affiliates_admin_affiliates_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Affiliates"),
                 refinery.affiliates_admin_affiliates_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
