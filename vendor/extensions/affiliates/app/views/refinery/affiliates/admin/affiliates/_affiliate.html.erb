<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(affiliate) -%>">
  <span class='title'>
    <%= affiliate.title %>

  </span>
  <span class='actions'>

    <%= link_to refinery_icon_tag("application_go.png"), refinery.affiliates_affiliate_path(affiliate),
        :title => t('.view_live_html'),
        :target => "_blank" %>

    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_affiliates_admin_affiliate_path(affiliate),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.affiliates_admin_affiliate_path(affiliate),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => affiliate.url),
        :method => :delete %>
  </span>
</li>

