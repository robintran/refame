<%= form_for [refinery, :affiliates_admin, @affiliate] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @affiliate,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>

  <div class='field'>
    <%= f.label :specialist1 -%>
    <%= f.select :specialist1, Refinery::Affiliates::Affiliate::SPECIALISTA.map{ |k| [k, k]}  -%>
  </div>

  <div class='field'>
    <%= f.label :specialist2 -%>
    <%= f.select :specialist2, Refinery::Affiliates::Affiliate::SPECIALISTA.map{ |k| [k, k]}  -%>
  </div>

  <div class='field'>
    <%= f.label :specialist3 -%>
    <%= f.select :specialist3, Refinery::Affiliates::Affiliate::SPECIALISTA.map{ |k| [k, k]}  -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @affiliate.photo,
               :toggle_image_display => false %>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.affiliates.admin.affiliates.affiliate'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @affiliate.url) %>
<% end -%>

