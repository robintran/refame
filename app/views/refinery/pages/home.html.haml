        %a.pin-it-button{ :href=>"http://pinterest.com/pin/create/button/?url=#{root_url}&media=#{request.base_url}#{asset_path('michele.png')}&description=.", :'count-layout'=>"horizontal", :'always-show-count'=>"1"}
          %img{ :border=>"0", :src=>"http://assets.pinterest.com/images/PinExt.png", :title=>"Pin It"}
