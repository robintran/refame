!!!
%html
  %head
    %title Refame
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .body-container
      .content-wrapper
        #header
          - if current_user
            = render :partial => "shared/user_info"
            .hidden
              = render :partial => "shared/change_password_form"
          - else
            .login.right
              = render :partial => "shared/login_form"
          .hidden
            = render :partial => "shared/notification_form"
            = render :partial => "shared/registration_form"
        #main{:class => controller_name}
          .container
            = yield
        #footer
          Footer